<!doctype html>
<!--[if lt IE 7]><html class="no-js lt-ie11 lt-ie10 lt-ie9 lt-ie8 lt-ie7" lang="{{language.code}}"> <![endif]-->
<!--[if IE 7]><html class="no-js lt-ie11 lt-ie10 lt-ie9 lt-ie8" lang="{{language.code}}"> <![endif]-->
<!--[if IE 8]><html class="no-js lt-ie11 lt-ie10 lt-ie9" lang="{{language.code}}"> <![endif]-->
<!--[if IE 9]><html class="no-js lt-ie11 lt-ie10" lang="{{language.code}}"> <![endif]-->
<!--[if IE 10]><html class="no-js lt-ie11" lang="{{language.code}}"> <![endif]-->
<!--[if gt IE 10]><!--><html class="no-js" lang="{{locale}}"> <!--<![endif]-->
<head prefix="og: http://ogp.me/ns#">
    <meta charset="utf-8">
    <meta content="{{locale}}" http-equiv="Content-Language">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="/images/favicon.ico">
    <link rel="apple-itouch-icon" href="/images/favicon.png">

    {{#unless robots}}
    <meta name="robots" content="follow,index">
    {{else}}
    <meta name="robots" content="{{robots}}">
    {{/unless}}

    {{#if usePopTitle}}
     {{#pop "title"}}{{/pop}}
    {{else}}
    <title>{{#if title}}{{title}}{{else}}{{i18n 'adillions_meta_title'}}{{/if}}</title>
    {{/if}}

    {{#pop "meta"}}{{/pop}}

    <link rel="stylesheet" href="{{statics '/styles/main.css'}}">
    {{#pop "styles"}}{{/pop}}

    {{!-- If Browser can run JS, the .no-js class will be removed. Allow us to condition styling on JS availability --}}
    <script>(function(d){d.className=d.className.replace(/no-js/,'');})(document.documentElement);</script>

    <!--[if lt IE 9]>
    <script src="{{statics '/scripts/html5.js'}}"></script>
    <script src="{{statics '/scripts/json2.js'}}"></script>
    <![endif]-->

    {{> 'analytics'}}
  </head>
  <body>
    {{> 'header'}}
    <main class="site-content">
    {{{body}}}
    </main>
    {{> 'footer'}}
    {{> 'flash'}}
    <script src="{{statics '/scripts/main.js'}}"></script>
    {{#pop "scripts"}}{{/pop}}
  </body>
</html>
