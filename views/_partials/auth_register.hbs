<form role="form" action="{{route 'auth.callback'}}/register" method="post" class='auth-register-form panel panel-default'>

{{!--   <div class="panel-heading">
    <h1 class="panel-title">{{i18n 'auth_register'}}</h1>
  </div>
 --}}
  <div class="panel-body">

    <div class="auth-social clearfix">
      {{> 'auth_providers'}}
    </div>

    <div class="form-group">
      <input type="text" class="form-control username" name="username" placeholder="{{i18n 'auth_field_username'}}">
    </div>

    <div class="form-group">
      <input type="text" class="form-control email" name="email" placeholder="{{i18n 'auth_field_email'}}">
    </div>

    <div class="form-group">
      <input type="password" class="form-control password" name="password" placeholder="{{i18n 'auth_field_password'}}">
    </div>

    <div class="checkbox">
      <label>
        {{#set 'termsroute'}}{{route 'about.terms' lang=locale}}{{/set}}
        {{#set 'privacyroute'}}{{route 'about.privacy' lang=locale}}{{/set}}
        <input type="checkbox">
        {{{i18n 'auth_register_terms' termsroute privacyroute}}}
      </label>
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-lead btn-lg btn-block">{{i18n 'auth_register'}}</button>
    </div>

  </div>

</form>
