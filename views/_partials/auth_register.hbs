<form role="form" action="{{route 'auth.callback'}}/register" method="post" class='auth-register-form panel panel-default'>

  <div class="panel-heading">
    <h1 class="panel-title">{{i18n 'auth_register'}}</h1>
  </div>

  <div class="panel-body">

    {{#if providers}}
      <ul class="list-unstyled">
      {{#each providers}}
        <li class="text-center"><a href="/auth/{{slug}}" role="button">{{name}}</a></li>
      {{/each}}
      </ul>
    {{/if}}

    <div class="form-group">
      <input type="text" class="form-control" name="username" placeholder="{{i18n 'auth_field_username'}}">
    </div>

    <div class="form-group">
      <input type="text" class="form-control" name="email" placeholder="{{i18n 'auth_field_email'}}">
    </div>

    <div class="form-group">
      <input type="password" class="form-control" name="password" placeholder="{{i18n 'auth_field_password'}}">
    </div>

    <div class="checkbox">
      <label>
        <input type="checkbox">
        I agree to the <a href="{{route 'about.terms'}}">Terms of Use</a> and <a href="{{route 'about.privacy'}}">Privacy Policy</a>
      </label>
    </div>

    <div class="text-right">
      <button type="submit" class="btn btn-primary">{{i18n 'auth_register'}}</button>
    </div>

  </div>

</form>
