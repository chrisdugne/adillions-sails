{{#push "title"}}
    <title>{{i18n 'brand'}}: {{i18n 'game_meta_title'}}</title>
{{/push}}
{{#push "meta"}}
    <meta name="description" content="{{i18n 'game_meta_desc'}}">
{{/push}}

<div class="row mtxl">

  <div class="col-xs-12">
    {{#if alert}}
      <div class="alerts mbl">
        <div class="alert alert-{{alert.type}} mbn" role="alert">
          {{#mergeContexts parent=..}}
            {{{i18n alert.message}}}
          {{/mergeContexts}}
        </div>
      </div>
    {{/if}}
  </div>

  <div class="col-xs-12 col-sm-3 hidden-xs">
    {{> 'settings_nav'}}
  </div>

  <div class="col-xs-12 col-sm-9">


    <div class="panel panel-default">
      <div class="panel-heading">
       Connect
      </div>
      <div class="panel-body">
        <div class="auth-social clearfix">
        {{> 'auth_providers'}}
        </div>
      </div>
    </div>


    <div class="panel panel-default">
      <div class="panel-heading">
        {{{i18n 'profile'}}} {{user.username}}
      </div>
      <div class="panel-body">
        <form role="form form-horizontal" action="{{route 'user.updateAccount' lang=locale uid=user.uid}}" method="post" class='settings-account-form'>

          <input type="hidden" name="_method" value="put">

            <div class="row">
              <div class="col-sm-8">
                <div class="form-group form-group-lg has-feedback" data-toggle="tooltip" data-placement="top">
                  <label class="control-label" for="username">{{i18n 'ui_username'}}</label>
                  <input type="text" class="form-control username" name="user[userName]" placeholder="{{i18n 'ui_username'}}" value="{{user.userName}}">
                  <span class="help-block"></span>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-8">
                <div class="form-group form-group-lg has-feedback" data-toggle="tooltip" data-placement="top">
                  <label class="control-label" for="username">{{i18n 'ui_firstname'}}</label>
                  <input type="text" class="form-control username" name="user[firstName]" placeholder="{{i18n 'ui_firstname'}}" value="{{user.firstName}}">
                  <span class="help-block"></span>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-8">
                <div class="form-group form-group-lg has-feedback" data-toggle="tooltip" data-placement="top">
                  <label class="control-label" for="username">{{i18n 'ui_lastname'}}</label>
                  <input type="text" class="form-control username" name="user[lastName]" placeholder="{{i18n 'ui_lastname'}}" value="{{user.lastName}}">
                  <span class="help-block"></span>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-8">
                <div class="form-group form-group-lg has-feedback" data-toggle="tooltip" data-placement="top">
                  <label class="control-label" for="username">{{i18n 'ui_birthdate'}}</label>
                  <input type="text" class="form-control username" name="user[birthDate]" placeholder="mm/dd/yyyy" value="{{user.birthDate}}">
                  <span class="help-block"></span>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-8">
                <div class="form-group form-group-lg has-feedback">
                  <label class="control-label" for="email">{{i18n 'ui_email'}}</label>
                  <input type="email" class="form-control email" name="user[email]" placeholder="{{i18n 'ui_email'}}" value="{{user.email}}">
                  <span class="help-block"></span>
                </div>
              </div>
            </div>

            <div class="mtl">
              <button type="submit" class="btn btn-lead" data-loading-text="{{i18n 'ui_loading'}}">{{i18n 'settings_update'}}</button>
            </div>
        </form>

      </div>
    </div>
  </div>

</div>
