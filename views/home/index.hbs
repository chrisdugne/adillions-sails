{{#push "meta"}}
  <meta name="description" content="{{i18n 'adillions_meta_desc'}}">
  {{#if canonicalUrl}}<link rel="canonical" href="{{canonicalUrl}}" />{{/if}}
  {{#each alternateUrls}}
    <link rel="alternate" href="{{url}}" hreflang="{{code}}" />
  {{/each}}
{{/push}}

{{#push "styles"}}
{{/push}}

{{#push "scripts"}}
<script src="{{statics '/scripts/landing.js'}}"></script>
<script>require('landing');</script>
{{/push}}

{{!-- section: How it Works --}}
<section class="landing-section landing-hero">
  <h1 class="text-center mtn mbxl">{{i18n 'landing_title'}}</h1>
  <div class="container mbxl">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <p class="text-center highlight highlight-theme">
          <span class="title">{{i18n 'current_theme'}}</span>
          <strong class="text">Famous Actors</strong>
        </p>
      </div>
      <div class="col-xs-12 col-sm-4">
        <p class="text-center highlight highlight-prize">
          <span class="title">{{i18n 'fund_prize'}}</span>
          <strong class="text">US$ 545</strong>
        </p>
      </div>
      <div class="col-xs-12 col-sm-4">
        <p class="text-center highlight highlight-drawing">
          <span class="title">{{i18n 'next_drawing'}}</span>
          <strong class="text">1d 18h 15min 30s</strong>
        </p>
      </div>
    </div>
    <p class="text-center">
      <a href="{{route 'game.index' lang=locale}}" class="btn btn-lead btn-lg play">
        {{{i18n 'play_for_free'}}}
      </a>
    </p>
  </div>
</section>

{{!-- section: How it Works --}}
<section class="landing-section landing-howitworks">
  <div class="container">
    <h2 class="text-center">{{i18n 'landing_howitworks'}}</h2>

    <div class="row">
      <div class="col-xs-12 col-sm-4 text-center watch-ad">
        <div class="icon first">
          <div class="center-block main-howitworks-watchad"></div>
        </div>
        <h3><small class="hidden">1.</small> {{i18n 'landing_watchad'}}</h3>
        <p class="desc">{{{i18n 'landing_watchad_desc'}}}</p>
        <p>
          <a href="{{route 'about.winwinwin' lang=locale}}" class="see-more">
            {{i18n 'landing_watchad_link'}}
            <span class="glyphicon glyphicon-chevron-right"></span>
          </a>
        </p>
      </div>
      <div class="col-xs-12 col-sm-4 text-center get-ticket">
        <div class="icon">
          <div class="center-block main-howitworks-getticket"></div>
        </div>
        <h3><small class="hidden">2.</small> {{i18n 'landing_getticket'}}</h3>
        <p class="desc">{{{i18n 'landing_getticket_desc'}}}</p>
        <p>
          <a href="{{route 'about.rules' lang=locale}}" class="see-more">
            {{i18n 'landing_getticket_link'}}
            <span class="glyphicon glyphicon-chevron-right"></span>
          </a>
        </p>
      </div>
      <div class="col-xs-12 col-sm-4 text-center win-prize">
        <div class="icon last">
          <div class="center-block main-howitworks-winprize"></div>
        </div>
        <h3><small class="hidden">3.</small> {{i18n 'landing_winprize'}}</h3>
        <p class="desc">{{{i18n 'landing_winprize_desc'}}}</p>
        <p>
          <a href="{{route 'game.results' lang=locale}}" class="see-more">
            {{i18n 'landing_winprize_link'}}
            <span class="glyphicon glyphicon-chevron-right"></span>
          </a>
        </p>
      </div>
    </div>

  </div>
</section>

{{!-- section: Platforms --}}
<section class="landing-section landing-platforms">
  <div class="container">
    <h2 class="text-center">{{i18n 'landing_platforms_title'}}</h2>
    <p class="desc text-center">{{i18n 'landing_platforms_desc'}}</p>
    {{!-- Platforms devices --}}
    <div class="devices mtxl mbxl">
      <div class="device features-sprite features-macbookair"
      data--50-top="left:100%;margin-left:-446px;" data--100-bottom="left:70%;margin-left:-446px;" data-anchor-target=".landing-platforms"></div>
      <div class="device features-sprite features-browser"
      data--50-top="left:80%;margin-left:-255px;" data--100-bottom="left:65%;margin-left:-255px;" data-anchor-target=".landing-platforms"></div>
      <div class="device features-sprite features-android-tablet"
      data--50-top="left:33%;" data--100-bottom="left:30%;" data-anchor-target=".landing-platforms"></div>
      <div class="device features-sprite features-apple-tablet"
      data--50-top="left:3%;" data--100-bottom="left:35%;" data-anchor-target=".landing-platforms"></div>
      <div class="device features-sprite features-android-phone"
      data--50-top="left:30%;" data--100-bottom="left:30%;" data-anchor-target=".landing-platforms"></div>
      <div class="device features-sprite features-apple-phone"
      data--50-top="left:0;" data--100-bottom="left:25%;" data-anchor-target=".landing-platforms"></div>
    </div>
    {{!-- Platforms links --}}
    <ul class="list-unstyled row">
      <li class="col-xs-12 col-sm-3 col-md-3 mbm">
        <a href="{{extUrl 'app_ios'}}" class="btn btn-primary btn-lg btn-block">
          app store
        </a>
      </li>
      <li class="col-xs-12 col-sm-3 col-md-3 mbm">
        <a href="{{extUrl 'app_android'}}" class="btn btn-primary btn-lg btn-block">
          google play
        </a>
      </li>
      <li class="col-xs-12 col-sm-3 col-md-3 mbm">
        <a href="{{extUrl 'app_facebook'}}" class="btn btn-primary btn-lg btn-block">
          facebook
        </a>
      </li>
      <li class="col-xs-12 col-sm-3 col-md-3 mbm">
        <a href="{{route 'game.index' lang=locale}}" class="btn btn-lead btn-lg btn-block">
          {{{i18n 'play_for_free'}}}
        </a>
      </li>
    </ul>
  </div>
</section>

{{!-- section: Responsible --}}
<section class="landing-section landing-responsible">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6 mbm responsible-bg-wrap">
        <div class="responsible-bg visible-md visible-lg" data--0-top="background-position:-20% 90%;" data--200-bottom="background-position:-20% 0%;"></div>
        <div class="responsible-bg visible-sm" data--0-top="background-position:-200% 90%;" data--100-bottom="background-position:-200% 0%;"></div>
        <div class="responsible-bg visible-xs" data-top="background-position:50% 80%;" data-bottom="background-position:50% 20%;"></div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-6 mbm">
        <h2>{{i18n 'landing_responsible_title'}}</h2>
        <p class="desc">{{{i18n 'landing_responsible_desc'}}}</p>
        <p class="prize mbn mtxl">
          {{#each charityPrice}}
            {{#if comma}}
              <span class="prize-comma">{{value}}</span>
            {{/if}}
            {{#if currency}}
              <span class="prize-currenry">{{value}}</span>
            {{/if}}
            {{#if number}}
                <span class="prize-item">{{value}}</span>
            {{/if}}
          {{/each}}
          <span class="prize-currenry">€</span>
        </p>
      </div>
    </div>
  </div>
</section>

