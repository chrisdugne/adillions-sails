{{#push "meta"}}
  <meta name="description" content="{{i18n 'adillions_meta_desc'}}">
  {{#if canonicalUrl}}<link rel="canonical" href="{{canonicalUrl}}" />{{/if}}
  {{#each alternateUrls}}
    <link rel="alternate" href="{{url}}" hreflang="{{code}}" />
  {{/each}}
{{/push}}

{{#push "styles"}}
{{/push}}

{{#push "scripts"}}
{{!-- <script src="https://maps.googleapis.com/maps/api/js?sensor=false&v={{api.google.version}}&key={{api.google.key}}&language={{locale}}"></script> --}}
<script src="{{statics '/scripts/landing.js'}}"></script>
<script>require('landing');</script>
<script>
function loadScript() {
  var script = document.createElement('script');
  script.type = 'text/javascript';
  script.src = 'https://maps.googleapis.com/maps/api/js?key={{api.google.key}}&v={{api.google.version}}&language={{locale}}&' +
      'callback=initializeMap';
  document.body.appendChild(script);
};
function initializeMap () {
  require('landing/global')['default']();
};
window.onload = loadScript;
</script>
{{/push}}


{{!-- section: hero--}}
<section class="landing-section landing-hero">
  <h1 class="text-center mtn mbxl">{{i18n 'landing_title'}}</h1>
  {{#if nextDrawing}}
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <p class="text-center highlight highlight-theme">
          <span class="title">{{i18n 'current_theme'}}</span>
          <strong class="text">{{nextDrawing.theme.title}}</strong>
        </p>
      </div>
      <div class="col-xs-12 col-sm-4">
        <p class="text-center highlight highlight-prize">
          <span class="title">{{i18n 'fund_prize'}}</span>
          <strong class="text">{{nextDrawing.prize}} €</strong>
        </p>
      </div>
      <div class="col-xs-12 col-sm-4">
        <p class="text-center highlight highlight-drawing" id="js-highlight-drawing"
        data-timestamp="{{nextDrawing.timestamp}}"
        data-day="{{i18n 'ui_day'}}"
        data-days="{{i18n 'ui_days'}}"
        >
          <span class="title">{{i18n 'next_drawing'}}</span>
          <strong class="text"></strong>
        </p>
      </div>
    </div>
    <p class="text-center">
      <a href="{{route 'game.index' lang=locale}}" class="btn btn-lead btn-lg play">
        {{{i18n 'play_for_free'}}}
      </a>
    </p>
    <div class="lucky-balls" id="js-lucky-balls">
      <h3 class="text-center">{{i18n 'the_lucky_balls'}}</h3>
      <img src="/images/landing/ipad.png" class="img-responsive center-block" />
      <ul class="list-inline text-center">
      {{#each nextDrawing.theme.balls}}
        <li class="lucky-ball" data-toggle="tooltip" data-placement="top" title="{{name}} {{name2}}">
          <img src="{{image}}" class="img-responsive center-block" alt="lucky ball {{name}}"/>
        </li>
      {{/each}}
      </ul>
    </div>
  </div>
  {{/if}}
</section>

{{!-- section: How it Works --}}
