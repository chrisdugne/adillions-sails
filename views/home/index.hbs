{{!-- section: Responsible --}}
<section class="landing-section landing-responsible">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6 mbm responsible-bg-wrap">
        <div class="responsible-bg visible-md visible-lg" data--0-top="background-position:-20% 90%;" data--200-bottom="background-position:-20% 0%;"></div>
        <div class="responsible-bg visible-sm" data--0-top="background-position:-200% 90%;" data--100-bottom="background-position:-200% 0%;"></div>
        <div class="responsible-bg visible-xs" data-top="background-position:50% 80%;" data-bottom="background-position:50% 20%;"></div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-6 mbm">
        <h2>{{i18n 'landing_responsible_title'}}</h2>
        <p class="desc">{{{i18n 'landing_responsible_desc'}}}</p>
        {{#if totalCharity}}
        <p class="prize mbn mtxl">
          {{#each totalCharity}}
            {{#if comma}}
              <span class="prize-comma">{{value}}</span>
            {{/if}}
            {{#if currency}}
              <span class="prize-currenry">{{value}}</span>
            {{/if}}
            {{#if number}}
                <span class="prize-item">{{value}}</span>
            {{/if}}
          {{/each}}
          <span class="prize-currenry">€</span>
        </p>
        {{/if}}
      </div>
    </div>
  </div>
</section>

{{!-- section: global --}}
<section class="landing-section landing-global">
  <div class="container">
    <h2 class="text-center">{{i18n 'landing_global_title'}}</h2>
    <p class="desc text-center">{{i18n 'landing_global_desc'}}</p>
    {{#if lastWinners}}
    <ul id="js-global-players" class="global-players list-inline row mtxl">
      {{#each lastWinners}}
      <li class="global-player col-sm-4 col-xs-12" data-country="{{country}}" data-title="{{firstname}} {{truncate lastname 1}}">
        <div class="media">
          <span class="pull-left avatar" href="#">
            <img class="media-object" src="/images/avatar/avatar-s-60x60.png" width="60">
          </span>
          <div class="media-body text-left">
            <p class="mtxs mbxs">
            {{firstname}} {{truncate lastname 1}}
            {{#if country}}
              ({{country}})
            {{/if}}
            {{#mergeContexts parent=..}}
              {{i18n 'won'}}
            {{/mergeContexts}}
            {{prize}} €
            </p>
            <div class="badge-wrap dispib" data-toggle="tooltip" data-placement="bottom" title="{{charityStatusName}}">
              {{#each charityStatus}}
              <span class="mlxs badge-charity {{#if active}}badge-charity-empty{{/if}}"></span>
              {{/each}}
            </div>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
    {{/if}}
    <div id="js-global-map" class="global-map">
    </div>
     <p class="text-center">
      <a href="{{route 'game.results' lang=locale}}" class="btn btn-primary btn-lg">
        {{i18n 'see_previous_results'}}
      </a>
    </p>
  </div>
</section>

