        <p>
          <a href="{{route 'about.winwinwin' lang=locale}}" class="see-more">
            {{i18n 'landing_watchad_link'}}
            <span class="glyphicon glyphicon-chevron-right"></span>
          </a>
        </p>
      </div>
      <div class="col-xs-12 col-sm-4 text-center get-ticket">
